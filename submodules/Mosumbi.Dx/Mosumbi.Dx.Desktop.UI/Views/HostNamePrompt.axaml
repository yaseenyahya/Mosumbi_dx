<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Mosumbi.Dx.Desktop.UI.Views.HostNamePrompt"
		x:DataType="vm:IHostNamePromptViewModel"
        xmlns:vm="clr-namespace:Mosumbi.Dx.Desktop.UI.ViewModels"
		xmlns:fakes="clr-namespace:Mosumbi.Dx.Desktop.UI.ViewModels.Fakes"
        Title="Host Name" 
        Icon="{Binding WindowIcon}"
        Height="150" Width="350"
		x:Name="HostNamePromptWindow"
        WindowStartupLocation="CenterScreen">

	<Design.DataContext>
		<fakes:FakeHostNamePromptViewModel />
	</Design.DataContext>
	
  <StackPanel Margin="10">
    <TextBlock Margin="0,0,0,5" Text="Enter the server URL:" Classes="SectionHeader"></TextBlock>
    <TextBox Name="HostTextBox" Height="25" Text="{Binding Host, Mode=TwoWay}"/>
    <Button Classes="NormalButton" HorizontalAlignment="Right" Width="40" Height="30" Margin="0,5,0,0" IsDefault="True" 
            Command="{Binding OKCommand}" 
            CommandParameter="{Binding #HostNamePromptWindow}" 
			Content="OK"/>
  </StackPanel>
</Window>
