<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:views="clr-namespace:Mosumbi.Dx.Desktop.UI.Views"
		xmlns:vm="clr-namespace:Mosumbi.Dx.Desktop.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
		d:DesignWidth="500" d:DesignHeight="300"
        x:Class="Mosumbi.Dx.Desktop.UI.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
        Icon="{Binding WindowIcon}"
        Title="{Binding ProductName}"
		Height="325" Width="400">

	<views:MainView />
</Window>
